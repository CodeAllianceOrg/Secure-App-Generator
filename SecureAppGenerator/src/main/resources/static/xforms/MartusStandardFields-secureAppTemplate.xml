			  <bind nodeset="/martus_standard_fields/publicinfo" required="false()" type="string"/>
			  <bind jr:preload="date" jr:preloadParams="today" nodeset="/martus_standard_fields/today" type="date"/>            <bind nodeset="/nm/cascading_select_regions/region3Cities" relevant="/nm/cascading_select_regions/regions='region3'" type="select1"/>
