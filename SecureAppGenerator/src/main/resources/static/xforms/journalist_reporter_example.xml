<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:jr="http://openrosa.org/javarosa"
    >
	
  <h:head>
    <h:title>Journalist/Reporter example</h:title>
    <model>
      <instance>
        <journalist_reporter_example id="journalist_reporter_example">
          <language/>
          <assignment/>
          <SourceTitle/>
          <SourceAffiliation/>
          <SourcePRContact/>
          <SourceContactInfo/>
          <SocialMediaCoordinates/>
          <InterviewDate/>
          <InterviewLocation/>
          <Anonymous>Not Specified</Anonymous>
          
            <MessageStories/>
            <MessageHQ/>
			
			<StoryInformationGrid jr:template="">
			  <StoryTitle/>
			  <StoryDate/>
			  <StoryTopic/>
			  <StoryMediaOutlet/>
			  <StoryContactInfo/>
			  <StoryEditorName/>
			  <StoryEditorTitle/>
			  <StoryEditorContactInfo/>
			</StoryInformationGrid>      
          <InterviewNotes/>
          
            <DraftsNote/>
            <Drafts/>
            <EditorsComments/>
            <FinalDraft/>
          
            <MessageAttachments/>
            <BackgroundInformation/>
            <PublishedInformation/>
          
          <today/>
        </journalist_reporter_example>
      </instance>

	  <bind nodeset="/journalist_reporter_example/language" type="select1"/>
      <bind nodeset="/journalist_reporter_example/assignment" type="string"/>
      <bind nodeset="/journalist_reporter_example/SourceTitle" type="string"/>
      <bind nodeset="/journalist_reporter_example/SourceAffiliation" type="string"/>
      <bind nodeset="/journalist_reporter_example/SourcePRContact" type="string"/>
      <bind nodeset="/journalist_reporter_example/SourceContactInfo" type="string"/>
      <bind nodeset="/journalist_reporter_example/SocialMediaCoordinates" type="string"/>
      <bind nodeset="/journalist_reporter_example/InterviewDate" type="date" constraint=". >= date('1900-01-01')" jr:constraintMsg="The date you entered is not within the accepted date range."/>
      <bind nodeset="/journalist_reporter_example/InterviewLocation" type="string"/>
      <bind nodeset="/journalist_reporter_example/Anonymous" required="true()" type="select1"/>
      <bind nodeset="/journalist_reporter_example/MessageStories" readonly="true()" type="string"/>
      <bind nodeset="/journalist_reporter_example/MessageHQ" readonly="true()" type="string"/>
      <bind nodeset="/journalist_reporter_example/StoryInformationGrid/StoryTitle" type="string"/>
      <bind nodeset="/journalist_reporter_example/StoryInformationGrid/StoryDate" type="date" constraint=". >= date('1900-01-01')" jr:constraintMsg="The date you entered is not within the accepted date range."/>
      <bind nodeset="/journalist_reporter_example/StoryInformationGrid/StoryTopic" type="string"/>
      <bind nodeset="/journalist_reporter_example/StoryInformationGrid/StoryMediaOutlet" type="string"/>
      <bind nodeset="/journalist_reporter_example/StoryInformationGrid/StoryContactInfo" type="string"/>
      <bind nodeset="/journalist_reporter_example/StoryInformationGrid/StoryEditorName" type="string"/>
      <bind nodeset="/journalist_reporter_example/StoryInformationGrid/StoryEditorTitle" type="string"/>
      <bind nodeset="/journalist_reporter_example/StoryInformationGrid/StoryEditorContactInfo" type="string"/>
      <bind nodeset="/journalist_reporter_example/InterviewNotes" type="string"/>
      <bind nodeset="/journalist_reporter_example/DraftsNote" readonly="true()" type="string"/>
      <bind nodeset="/journalist_reporter_example/Drafts" type="string"/>
      <bind nodeset="/journalist_reporter_example/EditorsComments" type="string"/>
      <bind nodeset="/journalist_reporter_example/FinalDraft" type="string"/>
      <bind nodeset="/journalist_reporter_example/MessageAttachments" readonly="true()" type="string"/>
      <bind nodeset="/journalist_reporter_example/BackgroundInformation" type="string"/>
      <bind nodeset="/journalist_reporter_example/PublishedInformation" type="string"/>
      <bind nodeset="/journalist_reporter_example/today" type="date" jr:preload="date" jr:preloadParams="today" />
    </model>
	
  </h:head>
